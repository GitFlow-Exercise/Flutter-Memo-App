name: Flutter Web CI

on:
  push:
    branches: [ main, develop ] # main 및 develop 브랜치에 푸시될 때 실행
  pull_request:
    branches: [ main, develop ] # main 및 develop 브랜치로의 Pull Request가 생성/수정될 때 실행

jobs:
  test:
    name: Test
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3 # 저장소 코드 체크아웃

      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.x' # 사용할 Flutter 버전 지정 (최신 안정 버전 권장)
          channel: 'stable'

      - name: Get dependencies
        run: flutter pub get

      - name: Analyze code
        run: flutter analyze

      - name: Run tests
        run: flutter test

  build:
    name: Build Web
    needs: test # test 작업이 성공해야 build 작업 실행
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3 # 저장소 코드 체크아웃

      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.x' # 사용할 Flutter 버전 지정 (최신 안정 버전 권장)
          channel: 'stable'

      - name: Get dependencies
        run: flutter pub get

      - name: Build web
        run: flutter build web --release

      - name: Upload artifacts
        uses: actions/upload-pages-artifact@v2
        if: github.ref == 'refs/heads/main' # main 브랜치인 경우에만 Artifact 업로드
        with:
          path: build/web

  deploy:
    name: Deploy to GitHub Pages
    needs: build
    runs-on: ubuntu-latest
    permissions:
      pages: write
      id-token: write
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    if: github.ref == 'refs/heads/main' # main 브랜치인 경우에만 배포
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v2
