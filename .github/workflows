name: Flutter Web CI/CD

on:
  push:
    branches: [ main ] # main 브랜치에 푸시될 때 실행
  pull_request:
    branches: [ main ] # main 브랜치로의 Pull Request가 생성/수정될 때 실행

jobs:
  build:
    name: Build Web
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3 # 저장소 코드 체크아웃

      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.x' # 사용할 Flutter 버전 지정 (최신 안정 버전 권장)
          channel: 'stable'

      - name: Get dependencies
        run: flutter pub get

      - name: Analyze code
        run: flutter analyze

      - name: Run tests
        run: flutter test

      - name: Build web
        run: flutter build web --release

      - name: Upload artifacts
        uses: actions/upload-pages-artifact@v2
        with:
          path: build/web

  deploy:
    name: Deploy to GitHub Pages
    needs: build
    runs-on: ubuntu-latest
    permissions:
      pages: write
      id-token: write
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}

    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v2
